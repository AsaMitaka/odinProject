div(class="wrapper__center")
    div(class="container")
        div(class="main__form-btns")
            a(href="/#", class="main__form-btn-disabled") Login  
            a(href='/signin', class="main__form-btn-enable") Sign In
        h1 Login
        form(action="/login", method="POST", class="main__form")
            input(type="email", name="email", class="main__form-input", placeholder="email") 
            input(type="password", name="password", class="main__form-input", placeholder="password")
            input(type="submit", value="login", class="main__form-btn")