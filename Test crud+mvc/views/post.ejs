<%- include('../views/header.ejs') %>
<div class="singlepost">
  <h1><%=pageTitle %></h1>
  <div class="post">
    <h2><%= post.title %></h2>
    <p><%= post.descr %></p>
    <form action="/posts/<%= post.id %>?_method=DELETE" method="POST">
      <button type="submit">Delete</button>
    </form>
    <a href="/posts">back to posts</a>
  </div>
</div>
